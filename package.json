{
  "name": "slack-gpt3",
  "version": "1.0.0",
  "description": "A Slack bot that uses OpenAI's GPT-3 to generate responses to messages when it is mentioned by @openai.",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc -p .",
    "build:watch": "tsc -w -p .",
    "start": "npm run build && node dist/app.js",
