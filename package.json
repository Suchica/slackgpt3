  },
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^3.12.2",
    "@supabase/supabase-js": "^2.2.1",
    "dotenv": "^16.0.3",
    "openai": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
